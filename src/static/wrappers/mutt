#!/usr/bin/env bash
### simple wrapper for notmuch
source $(readlink -f $(dirname $0)/../activate)

wrappers_dir=$(readlink -f $(dirname $0))
PATH=:$PATH:
PATH=${PATH//:$wrappers_dir:/:}
PATH=${PATH#:}
PATH=${PATH%:}
export PATH

MUTT=neomutt
if ! which neomutt &> /dev/null; then
    MUTT=mutt
fi

$MUTT -F "${MAIL_ENV}/muttrc" "$@"
